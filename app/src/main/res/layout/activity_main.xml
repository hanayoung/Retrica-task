<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.filtertoggle.ui.FilterViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/example_dark_img"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:colorFilter="@{viewModel.selectedFilter}" />

        <TextView
            android:id="@+id/tv_filter_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="필터"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginVertical="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_selected_filter"
            app:layout_constraintTop_toBottomOf="@+id/iv_default"
            app:layout_constraintBottom_toTopOf="@+id/rv_filter" />

        <TextView
            android:id="@+id/tv_selected_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="start"
            tools:text="테스트"
            android:text="@{viewModel.selectedFilter.displayName}"
            android:paddingStart="8dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintStart_toEndOf="@+id/tv_filter_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_default"
            app:layout_constraintBottom_toTopOf="@+id/rv_filter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_filter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_filter_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>